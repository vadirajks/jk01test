pipeline {
    agent any
    stages {
        stage('Build1') {
            when{
		buildingTag()
            }
            steps {
                echo 'Hello World building tag using buildingTag function'
            }
        }
        stage('Build2') {
            when{
                tag "2.0"
            }
            steps {
                echo 'Hello World building tag having release-* prefix'
            }
        }

        stage('Build3') {
            when{
                tag "release-*"
            }
            steps {
                echo 'Hello World building tag having release-* prefix'
            }
        }
    }
}
